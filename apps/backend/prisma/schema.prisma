enum Role {
  USER
  ADMIN
  NGO
}

enum NGOType {
  NON_PROFIT
  CHARITY
  FOUNDATION
  EDUCATIONAL
  RELIGIOUS
  HEALTHCARE
  ENVIRONMENTAL
}

model Address {
  id            Int     @id @default(autoincrement())
  streetAddress String
  city          String
  state         String
  postalCode    Int
  country       String
  donor         Donor?
  ngo           Ngo?
}

model Donor {
  id           Int            @id @default(autoincrement())
  name         String         @db.VarChar(255)
  email        String         @unique
  password     String
  phoneNumber  String         @unique @db.VarChar(20)
  role         Role           @default(USER)
  addressId    Int            @unique
  address      Address        @relation(fields: [addressId], references: [id])
  affiliation  String   
  donationType String[]
}

